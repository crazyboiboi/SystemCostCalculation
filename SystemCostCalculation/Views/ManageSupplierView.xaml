<UserControl x:Class="SystemCostCalculation.Views.ManageSupplierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SystemCostCalculation.Views"
             xmlns:viewmodels="clr-namespace:SystemCostCalculation.ViewModels"        
             xmlns:views="clr-namespace:SystemCostCalculation.Views"        
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1632">


    <UserControl.DataContext>
        <viewmodels:ManageSupplierViewModel/>
    </UserControl.DataContext>
    

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>



        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Grid.RowSpan="3" Margin="0 -30 0 0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20">
                <TextBlock VerticalAlignment="Center" Text="Displayed Supplier"/>
                <ComboBox VerticalAlignment="Center" Width="200" Margin="10 0 0 0"/>
                <Button Content="Add" Width="50" Height="50" Margin="80 0 0 0" Command="{Binding AddCommand}"/>
            </StackPanel>

            <Border BorderThickness="0.4" BorderBrush="Gray" Padding="20" Width="400">
                <Grid HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Code" Margin="0 0 0 0"/>
                        <TextBlock Text="Name" Margin="0 20 0 0"/>
                        <TextBlock Text="Contact" Margin="0 20 0 0"/>
                        <TextBlock Text="Address" Margin="0 20 0 0"/>
                        <TextBlock Text="Other Details" Margin="0 20 0 0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Left" Margin="10 0 0 0">
                        <TextBox Width="150" Height="20" HorizontalAlignment="Left" Margin="0 0 0 0" Text="{Binding code, Mode=TwoWay}"/>
                        <TextBox Width="200" Height="20" HorizontalAlignment="Left" Margin="0 15 0 0" Text="{Binding name, Mode=TwoWay}"/>
                        <TextBox Width="150" Height="20" HorizontalAlignment="Left" Margin="0 15 0 0" Text="{Binding contact, Mode=TwoWay}"/>
                        <TextBox Width="150" Height="20" HorizontalAlignment="Left" Margin="0 15 0 0" Text="{Binding address, Mode=TwoWay}"/>
                        <TextBox Width="225" Height="70" HorizontalAlignment="Left" Margin="0 17 0 0" TextWrapping="Wrap" Text="{Binding otherDetails, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 50 0 0 " Grid.Row="1" Grid.ColumnSpan="2">
                        <Button Content="Update" Width="50" Height="25" Margin="10 0 0 0" Command="{Binding UpdateCommand}"/>
                        <Button Content="Delete" Width="50" Height="25" Margin="10 0 0 0" Command="{Binding}"/>
                    </StackPanel>
                </Grid>
            </Border> 
        </StackPanel>


        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 30 0 0">
            <Border Padding="20" BorderThickness="0.4" BorderBrush="Gray">
                <StackPanel Orientation="Horizontal" >
                    <TextBlock Text="Item" Margin="0 0 0 0"/>
                    <TextBox Width="200" Margin="10 0 0 0"/>
                    <TextBlock Text="Price" Margin="10 0 0 0"/>
                    <TextBox Width="200" Margin="10 0 0 0"/>
                    <Button Content="Add Item" Width="60" Height="25" Margin="10 0 0 0"/>
                    <Button Content="Edit Item" Width="60" Height="25" Margin="10 0 0 0"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        


        <Border Padding="20" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2">
            <StackPanel Margin="0 20 0 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="Find" Margin="0 0 0 0"/>
                        <TextBox Width="175" Height="20" Margin="10 0 0 0"/>
                    </StackPanel>

                    <Button Content="X Remove Selected" Grid.Column="1" HorizontalAlignment="Right"/>

                </Grid>
                

                <DataGrid x:Name="stockItemTable" SelectedItem="{Binding Path=selectedSupplier, Mode=TwoWay}" ItemsSource="{Binding suppliers}" CanUserAddRows="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" AutoGenerateColumns="False" Margin="0 10 0 0" Height="400">
                    <DataGrid.Columns >
                        <DataGridTextColumn IsReadOnly="true" Header="SupplierCode" Binding="{Binding Code}" Width="0.25*"/>
                        <DataGridTextColumn IsReadOnly="true" Header="Name" Binding="{Binding Name}" Width="0.3*"/>
                        <DataGridTextColumn IsReadOnly="true" Header="Contact" Binding="{Binding Contact}" Width="0.25*"/>
                        <DataGridTextColumn IsReadOnly="true" Header="Address" Binding="{Binding Address}" Width="0.5*"/>
                        <DataGridTextColumn IsReadOnly="true" Header="Other Details" Binding="{Binding OtherDetails}" Width="0.5*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

        </Border>






    </Grid>


</UserControl>
